<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  Style Untuk activity_main.xml -->
    <style name="logo">
        <item name="android:src">@drawable/airplane</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>
    <style name="aplikasi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">#FF0066CC</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="aplikasi_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_info</item>
        <item name="android:textColor">#FF0066CC</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
